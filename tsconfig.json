{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2015"],
    "allowJs": true,  // Allow JSX files
    "jsx": "react-jsx",  // React JSX transform
    "moduleResolution": "node", 
    "strict": true,  // Enable strict type checking
    "esModuleInterop": true,
    "skipLibCheck": true,  // Skip checking library files
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*"  // Include all files in the src directory
  ],
  "exclude": [
    "node_modules"
  ]
}
